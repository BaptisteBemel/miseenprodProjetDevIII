{% extends 'base.html.twig' %}

{% block title %}Votre Calendrier{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    {% if is_granted("ROLE_ADMIN") %}
        <div id="root" class="jumbotron" data-id="true">
        </div>
    
    {% elseif is_granted("ROLE_USER") %}
        <div id="root" class="jumbotron" data-id="false">
        </div>
        <li id="user" value="{{ app.user.id }}"></li>
    {% endif %}
    {% if not is_granted("ROLE_ADMIN") and not is_granted("ROLE_USER") %}
        <a class="nav-link" href="/inscription">Inscription</a>
    {% endif %}
{% endblock %}